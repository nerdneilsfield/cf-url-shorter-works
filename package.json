{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "Single-domain URL shortener service using Cloudflare Workers",
  "main": "worker/src/index.js",
  "scripts": {
    "build:static": "node scripts/build-static.js",
    "dev": "npm run build:static && wrangler dev --local",
    "deploy": "npm run build:static && wrangler deploy",
    "test": "vitest",
    "test:scheduled": "wrangler dev --test-scheduled"
  },
  "keywords": [
    "url-shortener",
    "cloudflare-workers",
    "edge-compute"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "vitest": "^2.1.0",
    "wrangler": "^4.40.3"
  }
}
